{
    "rules": {
        "indent": [
            2,
            4
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "jsx-quotes": 2,
        "mocha/no-exclusive-tests": 2,
        "react/jsx-uses-react": 2,
        "react/jsx-uses-vars": 2,
    },
    "env": {
        "mocha": true,
        "es6": true,
        "node": true,
        "browser": true
    },
    "extends": "eslint:recommended",
    "ecmaFeatures": {
        "modules": true,
        "jsx": true,
        "experimentalObjectRestSpread": true
    },
    "plugins": [
        "mocha",
        "react"
    ]
}
